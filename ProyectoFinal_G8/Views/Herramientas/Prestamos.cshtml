<!-- Encabezado -->
<div class="mb-4">
    <h3 class="fw-bold mb-1">Préstamo de Herramientas</h3>
    <p class="text-muted">Administra las herramientas prestadas a los empleados.</p>
</div>

<!-- Seleccionar Empleado -->
<div class="card shadow-sm rounded-4 mb-4">
    <div class="card-body">
        <label class="fw-semibold mb-2">Seleccione un Empleado</label>
        <select id="selectEmpleado" class="form-select">
            <option hidden selected disabled>Seleccione un empleado...</option>
        </select>
    </div>
</div>

<!-- Acciones -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#registroModal">
            <i class="bi bi-plus-lg me-2"></i> Nuevo Préstamo
        </button>
    </li>
</ul>

<!-- Tabla -->
<div class="card shadow-sm rounded-4">
    <div class="card-header bg-light py-3">
        <h5 class="fw-semibold mb-0">Herramientas asignadas al empleado</h5>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Herramienta</th>
                        <th>Código Unidad</th>
                        <th>Fecha Préstamo</th>
                        <th>Activo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaPrestamosEmpleado">
                    <!-- Se rellenará dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
        <span class="fw-bold">Préstamos Activos: </span>
        <span id="totalActivos" class="ms-2 text-primary fw-bold">0</span>
    </div>
</div>

<!-- Modal Registrar Préstamo -->
<div class="modal fade" id="registroModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Registrar Préstamo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="formRegistrarPrestamo">

                <input type="hidden" id="idEmpleadoSeleccionado" />

                <div class="modal-body">

                    <!-- Herramienta -->
                    <label class="col-form-label fw-semibold">Herramienta</label>
                    <select class="form-select" id="selectHerramienta" required>
                        <option hidden selected disabled>Seleccione una herramienta...</option>
                    </select>

                    <label class="col-form-label fw-semibold">Empleado</label>
                    <select class="form-select" id="selectEmpleadoModal" required>
                        <option hidden selected disabled>Seleccione un empleado...</option>
                    </select>

                    <!-- Código -->
                    <label class="col-form-label fw-semibold mt-3">Código de Unidad</label>
                    <input type="text" id="codigoUnidad" class="form-control" readonly
                           placeholder="Código de la herramienta" required />

                    <!-- Fecha -->
                    <label class="col-form-label fw-semibold mt-3">Fecha de Préstamo</label>
                    <input type="date" id="fechaPrestamo" class="form-control" required />

                    <!-- Activo -->
                    <label class="col-form-label fw-semibold mt-3">Estado del Préstamo</label>
                    <select id="activo" class="form-select" required>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>

            </form>

        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/prestamos.js"></script>
}
