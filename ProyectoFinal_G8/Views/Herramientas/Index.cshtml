<!-- Encabezado -->
<div class="mb-4">
    <h3 class="fw-bold mb-1">Herramientas</h3>
    <p class="text-muted">Administra todas las herramientas registradas en el sistema.</p>
</div>

<!-- Acciones -->
<div class="d-flex justify-content-between align-items-center mb-4">

    <!-- Buscador -->
    <div class="input-group w-50">
        <span class="input-group-text bg-light">
            <i class="bi bi-search"></i>
        </span>
        <input type="text" id="buscarHerramienta" class="form-control" placeholder="Buscar herramienta...">
    </div>

</div>

<!-- Opciones -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#registroModal">
            <i class="bi bi-plus-lg me-2"></i> Nueva Herramienta
        </button>
    </li>
</ul>

<!-- Modal -->
<div class="modal fade" id="registroModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Registrar Herramienta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="formRegistro">
                <input type="hidden" id="idHerramienta" />

                <div class="modal-body">

                    <!-- Nombre -->
                    <label class="col-form-label">Nombre</label>
                    <input type="text" class="form-control"
                           placeholder="Nombre de la herramienta"
                           id="nombre" name="nombre" required />

                    <!-- Código de Unidad -->
                    <label class="col-form-label mt-3">Código de Unidad</label>
                    <input type="text" class="form-control"
                           placeholder="Código único de la herramienta"
                           id="codigoUnidad" name="codigoUnidad" required />

                    <!-- Estado -->
                    <label class="col-form-label mt-3">Estado</label>
                    <select class="form-select" id="estado" name="estado" required>
                        <option hidden selected disabled>Seleccione un estado...</option>
                        <option value="Buena">Buena</option>
                        <option value="Mala">Mala</option>
                        <option value="Ocupada">Ocupada</option>
                        <option value="En Reparación">En Reparación</option>
                    </select>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Tabla -->
<div class="card shadow-sm rounded-4">
    <div class="card-header bg-light py-3">
        <h5 class="fw-semibold mb-0">Listado de Herramientas</h5>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Código</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody id="tablaHerramientas">
                    <tr>
                        <td>01</td>
                        <td>Taladro industrial</td>
                        <td>TAL-445</td>
                        <td><span class="badge bg-success">Buena</span></td>

                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary me-2"
                                    data-bs-toggle="modal" data-bs-target="#registroModal">
                                <i class="bi bi-pencil-square"></i>
                            </button>

                            <button class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
        <!-- Paginacion -->
        <nav>
            <ul class="pagination justify-content-end m-0">
                <li class="page-item disabled">
                    <span class="page-link">Anterior</span>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section Scripts{
    <script src="~/js/herramientas.js"></script>
}
