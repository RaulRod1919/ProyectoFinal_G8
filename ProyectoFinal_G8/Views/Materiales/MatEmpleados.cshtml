@{
    ViewData["Title"] = "Materiales por Empleado";
}

<!-- Encabezado -->
<div class="mb-4">
    <h3 class="fw-bold mb-1">Materiales por Empleado</h3>
    <p class="text-muted">Administra los materiales asignados a cada empleado.</p>
</div>

<!-- Seleccionar Empleado -->
<div class="card shadow-sm rounded-4 mb-4">
    <div class="card-body">
        <label class="fw-semibold mb-2">Seleccione un Empleado</label>
        <select id="selectEmpleado" class="form-select">
            <option hidden selected disabled>Seleccione un empleado...</option>
        </select>
    </div>
</div>

<!-- Acciones -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#registroModal">
            <i class="bi bi-plus-lg me-2"></i> Nuevo Material
        </button>
    </li>
</ul>

<!-- Tabla -->
<div class="card shadow-sm rounded-4">
    <div class="card-header bg-light py-3">
        <h5 class="fw-semibold mb-0">Materiales asignados al empleado</h5>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Material</th>
                        <th>Precio Unit.</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaMaterialesEmpleado">
                    <!-- Se rellena dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
        <span class="fw-bold">Total del Empleado: </span>
        <span id="totalEmpleado" class="ms-2 text-primary fw-bold">₡0.00</span>
    </div>
</div>

<!-- Modal Agregar Material -->
<div class="modal fade" id="registroModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Agregar Material al Empleado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="formAgregarMaterial">
                <input type="hidden" id="idEmpleadoSeleccionado" />

                <div class="modal-body">

                    <label class="col-form-label fw-semibold">Material</label>
                    <select class="form-select" id="selectMaterial" required>
                        <option hidden selected disabled>Seleccione un material...</option>
                    </select>

                    <label class="col-form-label fw-semibold mt-3">Cantidad</label>
                    <input type="number" min="1" class="form-control" id="cantidadMaterial"
                           placeholder="Ingrese la cantidad" required />

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/matEmpleados.js"></script>
}
