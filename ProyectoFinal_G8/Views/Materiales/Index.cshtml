<!-- Encabezado -->
<div class="mb-4">
    <h3 class="fw-bold mb-1">Materiales</h3>
    <p class="text-muted">Administra todos los materiales registrados en el sistema.</p>
</div>

<!-- Acciones -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <!-- Buscador -->
    <div class="input-group w-50">
        <span class="input-group-text bg-light">
            <i class="bi bi-search"></i>
        </span>
        <input type="text" class="form-control" placeholder="Buscar material..." id="buscarMaterial">
    </div>
</div>

<!-- Botón -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <button class="btn btn-primary rounded-pill px-4"
                data-bs-toggle="modal" data-bs-target="#registroModal"
                id="btnNuevoMaterial">
            <i class="bi bi-plus-lg me-2"></i> Nuevo Material
        </button>
    </li>
</ul>

<!-- Modal -->
<div class="modal fade" id="registroModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="tituloModalMaterial">Registrar Material</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="formRegistroMaterial">
                <input type="hidden" id="idMaterial" />

                <div class="modal-body">
                    <label class="col-form-label">Nombre</label>
                    <input type="text" class="form-control"
                           placeholder="Nombre del material"
                           id="nombre" required />

                    <label class="col-form-label mt-3">Precio</label>
                    <input type="number" step="0.01" min="0"
                           class="form-control"
                           placeholder="Precio del material"
                           id="precio" required />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>

<!-- Tabla -->
<div class="card shadow-sm rounded-4">
    <div class="card-header bg-light py-3">
        <h5 class="fw-semibold mb-0">Listado de Materiales</h5>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaMateriales">
                    <!-- Se rellena dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/materiales.js"></script>
}
