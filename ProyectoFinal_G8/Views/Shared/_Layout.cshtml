<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoFinal_G8</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinal_G8.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-3 mb-5">
            <div class="container-fluid">

                <!-- Logo / Marca -->
                <a class="navbar-brand fw-semibold d-flex align-items-center" href="#">
                    <i class="bi bi-grid-fill me-2 text-primary"></i>
                    ProyectoFinal_G8
                </a>

                <!-- Botón responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Items -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto gap-2">

                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link nav-link-modern dropdown-toggle"
                               href="#"
                               id="dropdownProveedores"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <i class="bi bi-tools me-1"></i> Herramientas
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="dropdownProveedores">

                                <li>
                                    <a class="dropdown-item" asp-controller="Herramientas" asp-action="Index">
                                        <i class="bi bi-wrench-adjustable me-2"></i> Catálogo de Herramientas
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Herramientas" asp-action="Prestamos">
                                        <i class="bi bi-box-arrow-right me-2"></i> Prestamo de Herramientas
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link nav-link-modern dropdown-toggle"
                               href="#"
                               id="dropdownProveedores"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <i class="bi bi-truck me-1"></i> Proveedores
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="dropdownProveedores">

                                <li>
                                    <a class="dropdown-item" asp-controller="Proveedores" asp-action="Index">
                                        <i class="bi bi-card-list me-2"></i> Catálogo de Proveedores
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Proveedores" asp-action="Solicitud">
                                        <i class="bi bi-journal-plus me-2"></i> Solicitud de Materiales
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-controller="Requisiciones" asp-action="Index">
                                <i class="bi-arrow-left-right me-1"></i> Requisiciones
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-controller="Empleados" asp-action="Index">
                                <i class="bi bi-people me-1"></i> Empleados
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link nav-link-modern dropdown-toggle"
                               href="#"
                               id="dropdownMateriales"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                <i class="bi bi-box-seam me-1"></i> Materiales
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="dropdownMateriales">

                                <li>
                                    <a class="dropdown-item" asp-controller="Materiales" asp-action="Index">
                                        <i class="bi bi-archive me-2"></i> Catálogo de Materiales
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Materiales" asp-action="MatProyectos">
                                        <i class="bi bi-diagram-2 me-2"></i> Materiales por Proyecto
                                    </a>
                                </li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Materiales" asp-action="MatEmpleados">
                                        <i class="bi-person-workspace me-2"></i> Materiales por Empleado
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-controller="Proyectos" asp-action="Index">
                                <i class="bi bi-folder2 me-1"></i> Proyectos
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-controller="Areas" asp-action="Index">
                                <i class="bi bi-diagram-3 me-1"></i> Áreas
                            </a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProyectoFinal_G8 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
