@{
    ViewData["Title"] = "Solicitud de Materiales";
}

<!-- Encabezado -->
<div class="mb-4">
    <h3 class="fw-bold mb-1">Solicitud de Materiales</h3>
    <p class="text-muted">Administra las solicitudes enviadas a los proveedores.</p>
</div>

<!-- Botón -->
<button class="btn btn-primary rounded-pill px-4 mb-4"
        data-bs-toggle="modal" data-bs-target="#solicitudModal"
        id="btnNuevaSolicitud">
    <i class="bi bi-plus-lg me-2"></i> Nueva Solicitud
</button>

<!-- Tabla -->
<div class="card shadow-sm rounded-4">
    <div class="card-header bg-light py-3">
        <h5 class="fw-semibold mb-0">Listado de Solicitudes</h5>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Proveedor</th>
                        <th>Estado</th>
                        <th>Materiales</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaSolicitudes"></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="solicitudModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Nueva Solicitud</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="formSolicitud">
                <input type="hidden" id="idSolicitud">

                <div class="modal-body">

                    <label>Proveedor</label>
                    <select class="form-select mb-3" id="selectProveedor" required>
                        <option hidden selected disabled>Seleccione un proveedor...</option>
                    </select>

                    <label>Estado</label>
                    <select class="form-select mb-4" id="selectEstado" required>
                        <option>Pendiente</option>
                        <option>Aprobado</option>
                        <option>Recibido</option>
                    </select>

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label>Materiales</label>
                        <div>
                            <button type="button" class="btn btn-success btn-sm" id="btnAgregarMaterial">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" id="btnEliminarMaterial">
                                <i class="bi bi-dash-lg"></i>
                            </button>
                        </div>
                    </div>

                    <div id="contenedorMateriales"></div>

                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/solicitud.js"></script>
}
