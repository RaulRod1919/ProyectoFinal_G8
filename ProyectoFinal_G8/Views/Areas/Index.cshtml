<!-- ENCABEZADO -->
<div class="mb-4">
    <h3 class="fw-bold mb-1">Áreas</h3>
    <p class="text-muted">Administra todas las áreas registradas en el sistema.</p>
</div>

<!-- ACCIONES SUPERIORES -->
<div class="d-flex justify-content-between align-items-center mb-4">

    <!-- BUSCADOR -->
    <div class="input-group w-50">
        <span class="input-group-text bg-light">
            <i class="bi bi-search"></i>
        </span>
        <input type="text" class="form-control" placeholder="Buscar área...">
    </div>
 
</div>

<!-- NAV PILLS (SECCIONES) -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#registroModal">
            <i class="bi bi-plus-lg me-2"></i> Nueva Área
        </button>
    </li>
</ul>

<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="registroModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Titulo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form id="formRegistro">
                <input type="hidden" id="idArea" />
            <div class="modal-body">
                    <label class="col-form-label">Área</label>
                    <input type="text" class="form-control" placeholder="Nombre del Área" name="nombreArea" id="nombreArea" required/>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
            </form>

        </div>
    </div>
</div>


<!-- TABLA EN UNA CARD -->
<div class="card shadow-sm rounded-4">
    <div class="card-header bg-light py-3">
        <h5 class="fw-semibold mb-0">Listado de Áreas</h5>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Nombre del Área</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>01</td>
                        <td>Finanzas</td>
                        <td><span class="badge bg-success">Activa</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#registroModal">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>

                    <tr>
                        <td>02</td>
                        <td>Recursos Humanos</td>
                        <td><span class="badge bg-danger">Inactiva</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#registroModal">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>

                    <tr>
                        <td>03</td>
                        <td>Contabilidad</td>
                        <td><span class="badge bg-success">Activa</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#registroModal">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>

    <div class="card-footer bg-white py-3">
        <!-- PAGINACIÓN -->
        <nav>
            <ul class="pagination justify-content-end m-0">
                <li class="page-item disabled">
                    <span class="page-link">Anterior</span>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">Siguiente</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

