<!-- Encabezado -->
<div class="mb-4">
    <h3 class="fw-bold mb-1">Requisiciones a Otras Áreas</h3>
    <p class="text-muted">Administra las solicitudes de materiales hacia otras bodegas.</p>
</div>

<!-- Acciones -->
<ul class="nav nav-pills mb-4">
    <li class="nav-item">
        <button class="btn btn-primary rounded-pill px-4" data-bs-toggle="modal" data-bs-target="#requisicionModal" id="btnNuevaRequisicion">
            <i class="bi bi-plus-lg me-2"></i> Nueva Requisición
        </button>
    </li>
</ul>

<!-- Tabla -->
<div class="card shadow-sm rounded-4">
    <div class="card-header bg-light py-3">
        <h5 class="fw-semibold mb-0">Listado de Requisiciones</h5>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Empleado</th>
                        <th>Proyecto</th>
                        <th>Fecha</th>
                        <th>Materiales</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tablaRequisiciones">
                    <!-- Se rellena dinámicamente -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar -->
<div class="modal fade" id="requisicionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal">Nueva Requisición</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <form id="formRequisicion">
                <input type="hidden" id="idRequisicion" />

                <div class="modal-body">

                    <!-- Empleado -->
                    <label class="fw-semibold">Empleado</label>
                    <select class="form-select mb-3" id="selectEmpleado" required>
                        <option hidden selected disabled>Seleccione un empleado...</option>
                    </select>

                    <!-- Proyecto -->
                    <label class="fw-semibold">Proyecto</label>
                    <select class="form-select mb-3" id="selectProyecto" required>
                        <option hidden selected disabled>Seleccione un proyecto...</option>
                    </select>

                    <!-- Fecha -->
                    <label class="fw-semibold">Fecha de Solicitud</label>
                    <input type="date" id="fechaSolicitud" class="form-control mb-4" required />

                    <!-- Materiales -->
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="fw-semibold mb-0">Materiales Solicitados</label>
                        <div>
                            <button type="button" class="btn btn-success btn-sm" id="btnAgregarMaterial">
                                <i class="bi bi-plus-lg"></i>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" id="btnEliminarMaterial">
                                <i class="bi bi-dash-lg"></i>
                            </button>
                        </div>
                    </div>

                    <div id="contenedorMateriales">
                        <!-- Inputs de materiales dinámicos -->
                        <div class="row g-3 mb-3 item-material">
                            <div class="col-md-8">
                                <input type="text" class="form-control material-input" placeholder="Material solicitado" required />
                            </div>
                            <div class="col-md-4">
                                <input type="number" min="1" class="form-control cantidad-input" placeholder="Cantidad" required />
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/manejoinputs.js"></script>
}